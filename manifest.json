{

  "manifest_version": 2,
  "name": "Marxist Reader",
  "author": "Vin√≠cius Melo - @vinimlo",
  "version": "1.0",
  "homepage_url": "https://gitlab.com/vinimlo/marxist-reader/tree/master",

  "description": "Improves the reading experience at marxists.org articles.",

  "icons": {
    "48": "icons/marx.svg",
    "96": "icons/marx.svg"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.marxists.org/portugues/*"],
      "js": ["marxistReader.js"]
    }
  ]

}
